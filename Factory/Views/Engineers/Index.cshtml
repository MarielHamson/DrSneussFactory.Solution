@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1> Available Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers are available yet. Would you like to add one? </h3>
}

@foreach(Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
}

<p>Click any engineer's name above to see which machines they are authorized to work on, or edit their details </p>

<p>@Html.ActionLink("Add new Engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>