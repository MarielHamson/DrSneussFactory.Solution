@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<h2>Add a Machine</h2> 

<h4>Add a Machine this Engineer is authorized to repair: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Assign Machine")
  @Html.DropDownList("MachineId")

  <input type="submit", value="Assign Machine" />
}

<p>@Html.ActionLink("Back to List of Engineers", "Index")</p>
<p>@Html.ActionLink("Back to List of Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>